<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <!-- Большая картинка рецепта -->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="221sp"
        android:src="@drawable/ic_cooking_chef_opacity"
        android:contentDescription="@string/receipt_thumb"
        android:gravity="center_horizontal" />

    <!-- Первая строка -->
    <TextView
        android:id="@+id/receiptName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/thumbnail"
        android:layout_alignTop="@id/thumbnail"
        android:layout_alignEnd="@id/thumbnail"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/rounded_corner"
        android:gravity="center_horizontal"
        android:text="@string/stub_receipt_name"
        android:textSize="20sp"
        android:padding="3sp"/>

    <!-- Вторая строка -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/thumbnail"
        android:background="@drawable/rounded_corner"
        android:gravity="center_horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:padding="3sp">

        <TextView
            android:id="@+id/receiptTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:text="@string/stub_receipt_time"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/receiptEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/receiptTime"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/stub_receipt_energy"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
